{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "options": {
    "properties": {
      "embeds": {
        "title": "Videos or Playlists",
        "type": "array",
        "items": {
          "title": "Embed",
          "type": "object",
          "properties": {
            "url": {
              "title": "URL",
              "type": "string",
              "description": "The URL of the YouTube video or playlist to be embedded.",
              "order": 1,
              "default": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
            },
            "location": {
              "title": "Location",
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "prepend"
              },
              "description": "Select where on the page would you like this embed to appear.",
              "order": 2
            },
            "autoplay": {
              "title": "Autoplay",
              "type": "boolean",
              "description": "Should the video play automatically when the page is loaded?",
              "order": 3
            }
          }
        }
      }
    }
  }
}
