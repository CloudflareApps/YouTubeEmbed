{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Location",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        },
        "description": "Where should the video players appear on your site?",
        "order": 0
      },

      "embeds": {
        "title": "Videos or Playlists",
        "type": "array",
        "order": 1,
        "items": {
          "title": "Embed",
          "type": "object",
          "properties": {
            "url": {
              "title": "URL",
              "type": "string",
              "description": "The URL of the YouTube video or playlist to be embedded.",
              "order": 1,
              "default": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
            },
            "autoplay": {
              "title": "Autoplay",
              "type": "boolean",
              "description": "Should the video play automatically when the page is loaded?",
              "order": 3
            }
          }
        }
      }
    }
  }
}
